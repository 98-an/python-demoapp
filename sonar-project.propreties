sonar.host.url=https://sonarcloud.io
sonar.organization=98-an
sonar.projectKey=98-an_python-demoapp

# Répertoires principaux
sonar.sources=src,app
sonar.tests=tests

# Exclusions (pour éviter le bruit)
sonar.exclusions=/tests/postman_collection.json,/_pycache_/,/.pytest_cache/,/.venv/,/node_modules/,/*.md

# Python
sonar.python.version=3.11

# Rapport de couverture généré par pytest
sonar.python.coverage.reportPaths=reports/coverage.xml
